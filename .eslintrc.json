{
  "extends": [
    "airbnb",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "commonjs": true,
    "jest": true,
    "node": true,
    "react": true
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "root": true,
  "rules": {
    "@typescript-eslint/no-use-before-define": [
      "error"
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/prefer-default-export": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "error",
          "info",
          "warn"
        ]
      }
    ],
    "no-use-before-define": "off",
    "object-property-newline": "error",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".tsx"
        ]
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    },
    "react": {
      "version": "latest"
    }
  }
}